<VBox styleClass="bloque2" stylesheets="@../estilo/kf_estilo.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dam.vista.ControladorAcceso">
    <children>
        <GridPane styleClass="bloque2">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
            <HBox fx:id="marco">
               <children>
                        <ImageView fitWidth="350.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../imagenes/KnightFightPortada.png" />
                            </image>
                            <effect>
                                <Reflection bottomOpacity="0.06" fraction="0.97" topOffset="-2.0" topOpacity="0.69" />
                            </effect>
                        </ImageView>
               </children>
            </HBox>
                <VBox alignment="CENTER" GridPane.rowIndex="1">
                    <children>
                        <TextField fx:id="correo" minHeight="35.0" minWidth="150.0" promptText="correo de registro">
                            <VBox.margin>
                                <Insets bottom="5.0" left="50.0" right="50.0" top="50.0" />
                            </VBox.margin>
                            <padding>
                                <Insets left="20.0" right="20.0" />
                            </padding>
                        </TextField>
                        <PasswordField fx:id="clave" minHeight="35.0" minWidth="150.0" promptText="clave de acceso">
                            <VBox.margin>
                                <Insets bottom="5.0" left="50.0" right="50.0" top="5.0" />
                            </VBox.margin>
                            <padding>
                                <Insets left="20.0" right="20.0" />
                            </padding>
                        </PasswordField>
                        <Label fx:id="error" alignment="TOP_CENTER" prefHeight="50.0" text="Datos de acceso incorrectos" textFill="RED">
                            <VBox.margin>
                                <Insets bottom="15.0" left="5.0" right="5.0" top="5.0" />
                            </VBox.margin>
                            <font>
                                <Font name="Arial Bold" size="14.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER">
                            <children>
                                <Button defaultButton="true" minHeight="40.0" minWidth="100.0" mnemonicParsing="false" onAction="#acceder" text="Acceder" textAlignment="CENTER">
                                    <VBox.margin>
                                        <Insets left="5.0" right="5.0" top="5.0" />
                                    </VBox.margin>
                                    <font>
                                        <Font name="Arial" size="18.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </Button>
                                <Button minHeight="40.0" minWidth="100.0" mnemonicParsing="false" onAction="#registrar" text="Registrar" textAlignment="CENTER">
                                    <font>
                                        <Font name="Arial" size="18.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets left="10.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets bottom="50.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </GridPane>
        <HBox alignment="TOP_RIGHT">
            <children>
                <Button mnemonicParsing="false" onAction="#salir" styleClass="sinfondo" text="Salir" textFill="#ab3030" />
            </children>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>
